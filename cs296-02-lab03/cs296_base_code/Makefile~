.SUFFIXES: .cpp .hpp

# Programs
SHELL 	= bash
CC     	= g++
LD	= ld
RM 	= rm
ECHO	= /bin/echo
CAT	= cat
PRINTF	= printf
SED	= sed
DOXYGEN = doxygen
######################################
# Project Name (generate executable with this name)
TARGET = cs296_base

# Project Paths
PROJECT_ROOT=$(CURDIR)
EXTERNAL_ROOT=$(PROJECT_ROOT)/external
SRCDIR = $(PROJECT_ROOT)/src
BOX2DPATH=$(EXTERNAL_ROOT)/src
OBJDIR = $(PROJECT_ROOT)/myobjs
BINDIR = $(PROJECT_ROOT)/mybins
DOCDIR = $(PROJECT_ROOT)/mydoc
SCRIPTDIR = $(PROJECT_ROOT)/scripts
DATADIR = $(PROJECT_ROOT)/data
PLOTSDIR = $(PROJECT_ROOT)/plots
PATCHPATH = $(PROJECT_ROOT)/patches
PATCHFILE = $(BOX2DPATH)/Box2D/Box2D/Common

# Library Paths
BOX2D_ROOT=$(EXTERNAL_ROOT)
GLUI_ROOT=/usr
GL_ROOT=/usr/include/

#Libraries
LIBS = -lBox2D -lglui -lglut -lGLU -lGL

# Compiler and Linker flags
CPPFLAGS =-g -Wall -O3 -pg -fno-strict-aliasing
CPPFLAGS+=-I $(BOX2D_ROOT)/include -I $(GLUI_ROOT)/include
LDFLAGS+=-L $(BOX2D_ROOT)/lib -L $(GLUI_ROOT)/lib

######################################

NO_COLOR=\e[0m
OK_COLOR=\e[1;32m
ERR_COLOR=\e[1;31m
WARN_COLOR=\e[1;33m
MESG_COLOR=\e[1;34m
FILE_COLOR=\e[1;37m

OK_STRING="[OK]"
ERR_STRING="[ERRORS]"
WARN_STRING="[WARNINGS]"
OK_FMT="${OK_COLOR}%30s\n${NO_COLOR}"
ERR_FMT="${ERR_COLOR}%30s\n${NO_COLOR}"
WARN_FMT="${WARN_COLOR}%30s\n${NO_COLOR}"
######################################

SRCS := $(wildcard $(SRCDIR)/*.cpp)
INCS := $(wildcard $(SRCDIR)/*.hpp)
OBJS := $(SRCS:$(SRCDIR)/%.cpp=$(OBJDIR)/%.o)


.PHONY: all setup doc clean distclean data plot

all: setup test1 $(BINDIR)/$(TARGET)

setup:
	@$(ECHO) "Setting up compilation..."
	@mkdir -p obj
	@mkdir -p bin

test1:
	@test -f $(EXTERNAL_ROOT)/include/Box2D/Box2D.h || { echo "Installing Box2D" ; make test2 ; }

test2:
	@cd $(BOX2DPATH);	pwd;	rm -rf Box2D;	tar -xvzf Box2D.tgz;    patch $(PATCHFILE)/b2Timer.cpp $(PATCHPATH)/b2Timer_cpp.patch;  patch $(PATCHFILE)/b2Timer.h $(PATCHPATH)/b2Timer_h.patch;  cd Box2D;	mkdir -p build296;	cd build296;	cmake  ../;	make;	make install;	cd ..;	cd ..;	cd ..;	cd ..
	@$(ECHO) "Box2D installed successfully"


$(BINDIR)/$(TARGET): $(OBJS)
	@$(PRINTF) "$(MESG_COLOR)Building executable:$(NO_COLOR) $(FILE_COLOR) %16s$(NO_COLOR)" "$(notdir $@)"
	@$(CC) -Wall -pg -O3 -o $@ $(LDFLAGS) $(OBJS) $(LIBS) 2> temp.log || touch temp.err
	@if test -e temp.err; \
	then $(PRINTF) $(ERR_FMT) $(ERR_STRING) && $(CAT) temp.log; \
	elif test -s temp.log; \
	then $(PRINTF) $(WARN_FMT) $(WARN_STRING) && $(CAT) temp.log; \
	else $(PRINTF) $(OK_FMT) $(OK_STRING); \
	fi;
	@$(RM) -f temp.log temp.err

-include $(OBJS:.o=.d)

$(OBJS): $(OBJDIR)/%.o : $(SRCDIR)/%.cpp
	@make test1
	@$(PRINTF) "$(MESG_COLOR)Compiling: $(NO_COLOR) $(FILE_COLOR) %25s$(NO_COLOR)" "$(notdir $<)"
	@$(CC) $(CPPFLAGS) -c $< -o $@ -MD 2> temp.log || touch temp.err
	@if test -e temp.err; \
	then $(PRINTF) $(ERR_FMT) $(ERR_STRING) && $(CAT) temp.log; \
	elif test -s temp.log; \
	then $(PRINTF) $(WARN_FMT) $(WARN_STRING) && $(CAT) temp.log; \
	else printf "${OK_COLOR}%30s\n${NO_COLOR}" "[OK]"; \
	fi;
	@$(RM) -f temp.log temp.err

doc:
	@$(ECHO) -n "Generating Doxygen Documentation ...  "
	@$(RM) -rf doc/html
	@$(DOXYGEN) $(DOCDIR)/Doxyfile 2 > /dev/null
	@$(ECHO) "Done"

data: all
	@mkdir -p $(DATADIR)
	@cd $(SCRIPTDIR); \
	bash g02_gen_data.sh; \
	bash g02_gen_csv.sh; \
	bash g02_gen_data_csv.sh; \
	bash g02_gen_data_random.sh
	@echo "Data Compiled"
	
plot: data
	@cd $(SCRIPTDIR); \
	bash average.sh; \
	bash frequency.sh; \
	bash random.sh; \
	bash random02.sh
	@chmod +xr $(DATADIR)/*.csv
	@mkdir -p $(PLOTSDIR)
	@cd $(SCRIPTDIR); \
	gnuplot g02_plot01.gpt; \
	gnuplot g02_plot02.gpt; \
	gnuplot g02_plot03.gpt; \
	gnuplot g02_plot04.gpt; \
	gnuplot g02_plot05.gpt
	@$(RM) -rf $(DATADIR)/average.csv
	@$(RM) -rf $(DATADIR)/frequency.csv
	@$(RM) -rf $(DATADIR)/random02_avg.csv
	@$(RM) -rf $(DATADIR)/random_avg.csv
	@$(RM) -rf $(PROJECT_ROOT)/fit.log
	@echo "Plots made"

clean:
	@$(ECHO) -n "Cleaning up..."
	@$(RM) -rf $(OBJDIR) *~ $(DEPS) $(SRCDIR)/*~ $(DATADIR) $(PLOTSDIR)
	@$(ECHO) "Done"

distclean: clean
	@$(RM) -rf $(BINDIR) $(DOCDIR)/html
	@$(RM) -rf $(EXTERNAL_ROOT)/lib/* $(EXTERNAL_ROOT)/include/* $(EXTERNAL_ROOT)/src/Box2D

